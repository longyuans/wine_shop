<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

    <session-factory>
        <property name="dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <!--
            <property name="connection.url">
            jdbc:mysql://localhost:3306/shop
            </property>
            <property name="connection.username">root</property>
            <property name="connection.password">root</property>
            <property name="connection.driver_class">
            com.mysql.jdbc.Driver
            </property>
        -->
        <property name="show_sql">true</property>

        <!-- 配置二级缓存提供商，注意此处并不是缓存的jar包 -->
        <property name="hibernate.cache.region.factory_class">
            org.hibernate.cache.ehcache.EhCacheRegionFactory
        </property>
        <property name="connection.url">jdbc:mysql://localhost:3306/wine_shop</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>

        <mapping class="com.wine_shop.bean.User" />
        <mapping class="com.wine_shop.bean.Categories" />
        <mapping class="com.wine_shop.bean.CategoryDetail" />
        <mapping class="com.wine_shop.bean.Chateau" />
        <mapping class="com.wine_shop.bean.Order" />
        <mapping class="com.wine_shop.bean.PriceRank" />
        <mapping class="com.wine_shop.bean.Product" />
        <mapping class="com.wine_shop.bean.Receiver" />
        <mapping class="com.wine_shop.bean.Report" />
        <mapping class="com.wine_shop.bean.ReportProducts" />
        <mapping resource="com/wine_shop/bean/Product.hbm.xml"/>
        <mapping class="com.wine_shop.bean.OrderLine"/>
        <mapping resource="com/wine_shop/bean/OrderLine.hbm.xml"/>


        <!-- 配置哪些类支持缓存 -->
        <class-cache usage="read-write"
                     class="com.wine_shop.bean.Product" />
    </session-factory>

</hibernate-configuration>